{
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/<APP_NAME>-<ENV>",
          "awslogs-region": "<AWS_REGION>",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "hostPort": <SERVICE_PORT>,
          "protocol": "tcp",
          "containerPort": <SERVICE_PORT> 
        }
      ],
      "environment": [
        {
          "name": "IMAGE",
          "value": "<IMAGE1_NAME>"
        },
        {
          "name": "COMMIT",
          "value": "<COMMIT>"
        },
        {
          "name": "BRANCH",
          "value": "<BRANCH>"
        },
        {
          "name": "PORT",
          "value": "<SERVICE_PORT>"
        },
        {
          "name": "HOSTNAME",
          "value": "0.0.0.0"
        }
      ],
      "image": "<IMAGE1_NAME>",
      "name": "<APP_NAME>-<ENV>-container"
    }
  ],
  "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/<APP_NAME>-<ENV>-ecs-exec-role",
  "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/<APP_NAME>-<ENV>-ecs-task-role",
  "family": "<APP_NAME>-<ENV>-task",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "<TASK_CPU>",
  "memory": "<TASK_MEMORY>"
}
